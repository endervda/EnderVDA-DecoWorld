    <div class="container">
        <div class="pageInfo">
            <h1>{{entry.logo}}</h1>
            <p>{{entry.richText}}</p>
        </div>
        {% set  categoryItems = craft.entries.section('categories').limit(2).all() %}
        {% for item in categoryItems %}
        <div class="categories">
            <img class="categoryImage" src="{{item.categoryImage.one().url('categoryImage')}}">
			<div class="categoryDetails">
            <a class="categoryLinks" href="{{item.url}}">{{item.richText}}</a>
            <p class="articleDescription">{{item.categoryDescription}}</p>
			</div>
        </div>
        {% endfor %}
    </div>
